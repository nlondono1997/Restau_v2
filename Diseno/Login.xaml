        <mah:TransitioningContentControl Content="TransitioningContentControl" HorizontalAlignment="Left" Margin="235,-19,0,0" VerticalAlignment="Top"/>
        <Image Height="93" Margin="332,27,331.6,300" VerticalAlignment="Center" Width="130" Source="Imagenes/Login.png"/>

    </Grid>
</mah:MetroWindow>